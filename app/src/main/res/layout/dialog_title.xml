<!-- Imported from Android's alert_dialog_title_material.xml (and modified to fix bottom padding) -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical|start"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp">
    <!-- 18dp == @android:dimen/dialog_padding_top_material (which isn't public) -->
    <!-- 24dp == ?attr/dialogPreferredPadding (API 22+) == dialog_padding_material -->

    <android.support.v7.widget.DialogTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        style="?android:attr/windowTitleStyle"/>
</LinearLayout>